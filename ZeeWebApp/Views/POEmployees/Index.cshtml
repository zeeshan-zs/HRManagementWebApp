        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.Nationality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassportNo)
        </td>
        <td>
            <a href="@Url.Action("Details", "POEmployees", new { id = item.Id })"><span class="me-1"><i class="bi bi-eye"></i></span></a>

            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Edit", "POEmployees", new { id = item.Id })"><span class="me-1"><i class="bi bi-pencil-square"></i></span></a>
                <a href="@Url.Action("Delete", "POEmployees", new { id = item.Id })"><span class="me-1"><i class="bi bi-trash3"></i></span></a>
                <input type="button" class="btnRowDelete"><span class="me-1" />

        }
</td>
        <td style="display:none;">
            @Html.DisplayFor(modelItem => item.PassportExpiryDt)
        </td>
        <td style="display:none;">
            @Html.DisplayFor(modelItem => item.VisaExpiryDt)
        </td>
        <td style="display:none;">
            @Html.DisplayFor(modelItem => item.EmiratesIdExpiryDt)
        </td>
    </tr>
