            <nav>
                <ul class="navbar-nav">
                    <li>
                        <div class="text-muted small fw-bold text-uppercase px-3">
                            CORE
                        </div>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="nav-link px-3"><span class="me-2"><i class="bi bi-speedometer"></i></span><span>Dashboard</span></a>
                    </li>
                    <li class="my-4">
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <div class="text-muted small fw-bold text-uppercase px-3">
